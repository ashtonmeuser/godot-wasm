{
  "options": {
    "memoryBase": 100,
    "use": "abort=assembly/index/abort",
    "enable": ["reference-types"]
  },
  "targets": {
    "debug": {
      "outFile": "build/example.debug.wasm",
      "textFile": "build/example.debug.wat",
      "sourceMap": true,
      "debug": true
    },
    "release": {
      "outFile": "build/example.wasm",
      "optimize": "speed",
      "noAssert": true
    }
  }
}
